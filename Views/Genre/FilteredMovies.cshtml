@model IEnumerable<CinemaManagement.Models.Movie>

<h2>Danh sách phim theo thể loại</h2>
<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3">
            <div class="card">
                <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <a href="@Url.Action("Details", "Movies", new { id = movie.MovieId })" class="btn btn-primary">Xem chi tiết</a>
                </div>
            </div>
        </div>
    }
</div>
