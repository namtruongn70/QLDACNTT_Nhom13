@model IEnumerable<CinemaManagement.Models.Movie>

@foreach (var movie in Model)
{
    <div class="col">
        <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden">
            <div class="position-relative overflow-hidden">
                <img src="@movie.PosterUrl" class="card-img-top img-fluid" alt="@movie.Title"
                     style="height: 300px; object-fit: cover; transition: transform 0.3s ease-in-out;">
            </div>
            <div class="card-body text-center">
                <h5 class="card-title fw-bold text-dark">@movie.Title</h5>
                <p class="card-text text-muted">
                    @if (movie.MovieGenres != null && movie.MovieGenres.Any())
                    {
                        foreach (var mg in movie.MovieGenres)
                        {
                            <span class="badge bg-secondary">@mg.Genre.Name</span>
                        }
                    }
                    else
                    {
                        <span class="text-danger">Chưa có thể loại</span>
                    }
                </p>
                <div class="mb-2">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (movie.Rating >= i)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                        else if (movie.Rating >= i - 0.5)
                        {
                            <i class="fas fa-star-half-alt text-warning"></i>
                        }
                        else
                        {
                            <i class="far fa-star text-warning"></i>
                        }
                    }
                    <small class="text-muted">(@movie.Rating.ToString("0.0"))</small>
                </div>
                <a href="@Url.Action("Details", "Movies", new { id = movie.MovieId })" class="btn btn-outline-danger fw-bold">🎥 Xem Chi Tiết</a>
            </div>
        </div>
    </div>
}
