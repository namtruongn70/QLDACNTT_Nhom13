@model CinemaManagement.ViewModel.TheaterFormViewModel
@{
    ViewData["Title"] = "Thêm rạp mới";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    .form-wrapper {
        max-width: 600px;
        margin: 50px auto;
    }

    .custom-card {
        background-color: #1c1c1c;
        color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(255, 0, 0, 0.3);
    }

    .custom-header {
        background-color: #000;
        padding: 20px;
        text-align: center;
        border-radius: 10px 10px 0 0;
    }

        .custom-header h3 {
            color: #ff4d4d;
            margin: 0;
        }

    .form-label {
        color: #ff4d4d;
        font-weight: bold;
    }

    .form-control {
        background-color: #2c2c2c;
        color: white;
        border: 1px solid #ff4d4d;
    }

        .form-control::placeholder {
            color: #bbbbbb;
        }

    .btn-red {
        background-color: #ff4d4d;
        color: #fff;
        border: none;
    }

        .btn-red:hover {
            background-color: #e60000;
        }

    .btn-outline-light {
        border: 1px solid #fff;
        color: #fff;
    }

        .btn-outline-light:hover {
            background-color: #fff;
            color: #000;
        }

    .text-danger {
        color: #ff6666 !important;
    }

</style>

<div class="form-wrapper">
    <div class="custom-card">
        <div class="custom-header">
            <h3><i class="bi bi-plus-circle"></i> Thêm rạp chiếu mới</h3>
        </div>
        <div class="p-4">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Theater.Name" class="form-label">🎬 Tên rạp</label>
                    <input asp-for="Theater.Name" class="form-control" placeholder="Nhập tên rạp..." />
                    <span asp-validation-for="Theater.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Theater.Location" class="form-label">📍 Địa điểm</label>
                    <input asp-for="Theater.Location" class="form-control" placeholder="Nhập địa điểm..." />
                    <span asp-validation-for="Theater.Location" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-red px-4">
                        <i class="bi bi-save"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-light px-4">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}