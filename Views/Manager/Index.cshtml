@model CinemaManagement.ViewModel.TheaterMoviesViewModel
@{
    ViewData["Title"] = "Quản lý phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Theaters = ViewBag.Theaters ?? new List<CinemaManagement.Models.Theater>();
    ViewBag.Genres = ViewBag.Genres ?? new List<CinemaManagement.Models.Genre>();
}

<!-- Thêm Tailwind CSS CDN -->
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<!-- Thêm Google Font Poppins -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<div class="container mx-auto px-4 py-8">

    @if (Model.IsFiltered)
    {
        <div class="bg-blue-100 border-l-4 border-blue-500 text-blue-700 p-4 mb-6 flex justify-between items-center rounded-lg animate-fade-in">
            <p>Đang lọc theo: <strong>@Model.TheaterName</strong></p>
            <a class="btn btn-outline-danger btn-sm transition duration-300 hover:bg-red-500 hover:text-white" href="@Url.Action("Index", "Manager")">
                <i class="bi bi-x-circle"></i> Xóa bộ lọc
            </a>
        </div>
    }

    <a class="add-movie-btn inline-flex items-center" href="@Url.Action("Create", "Manager")">
        <i class="bi bi-plus-circle mr-2"></i> Thêm phim mới
    </a>

    <div class="movie-frame bg-gray-100 p-8 rounded-2xl shadow-xl animate-fade-in">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
            @foreach (var movie in Model.Movies)
            {
                <div class="movie-card bg-white rounded-2xl shadow-lg overflow-hidden transform transition duration-300 hover:-translate-y-2 hover:shadow-2xl">
                    <img src="@movie.PosterUrl" class="w-full h-64 object-cover transition-transform duration-300 ease-in-out hover:scale-105" alt="@movie.Title" />
                    <div class="p-4">
                        <h5 class="text-lg font-semibold text-center text-blue-600">@movie.Title</h5>
                        <p class="text-gray-600 text-sm truncate">@movie.Description</p>
                        <p class="text-sm"><strong>Thời lượng:</strong> @movie.Duration phút</p>
                        <p class="text-sm"><strong>Thể loại:</strong> @string.Join(", ", movie.MovieGenres.Select(g => g.Genre.Name))</p>
                    </div>
                    <div class="p-4 bg-gray-50 flex justify-between items-center">
                        <a class="btn btn-info btn-sm flex items-center transition duration-300 hover:scale-105" href="@Url.Action("Details", "Manager", new { id = movie.MovieId })">
                            <i class="bi bi-eye mr-1"></i> Xem
                        </a>
                        <a class="btn btn-primary btn-sm flex items-center transition duration-300 hover:scale-105" href="@Url.Action("Edit", "Manager", new { id = movie.MovieId })">
                            <i class="bi bi-pencil mr-1"></i> Sửa
                        </a>
                        <form asp-action="Delete" asp-controller="Manager" method="post" onsubmit="return confirm('Bạn có chắc muốn xóa phim này?');" class="inline">
                            <input type="hidden" name="id" value="@movie.MovieId" />
                            <button type="submit" class="btn btn-danger btn-sm flex items-center transition duration-300 hover:scale-105">
                                <i class="bi bi-trash mr-1"></i> Xóa
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>

    @if (!Model.Movies.Any())
    {
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 text-center rounded-lg mt-6">
            Không có phim nào được tìm thấy.
        </div>
    }
</div>

<style>
    /* Hiệu ứng fade-in khi tải trang */
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    /* Hiệu ứng mới cho nút Thêm phim mới */
    .add-movie-btn {
        padding: 1.3em 3em;
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 2.5px;
        font-weight: 500;
        color: #000;
        background-color: #fff;
        border: none;
        border-radius: 45px;
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease 0s;
        cursor: pointer;
        outline: none;
        margin-bottom: 1.5rem;
        display: inline-flex;
        align-items: center;
    }

        .add-movie-btn:hover {
            background-color: black;
            box-shadow: 0px 15px 20px rgba(255, 20, 147, 0.4);
            color: #fff;
            transform: translateY(-7px);
        }

        .add-movie-btn:active {
            transform: translateY(-1px);
        }

    /* Tùy chỉnh các nút khác */
    .btn-success {
        background: linear-gradient(to right, #22c55e, #16a34a);
        border: none;
    }

    .btn-info {
        background: linear-gradient(to right, #3b82f6, #1e40af);
        border: none;
    }

    .btn-primary {
        background: linear-gradient(to right, #8b5cf6, #6d28d9);
        border: none;
    }

    .btn-danger {
        background: linear-gradient(to right, #ef4444, #b91c1c);
        border: none;
    }

    .btn {
        padding: 8px 16px;
        border-radius: 8px;
        color: white;
    }

    /* Tùy chỉnh khung phim */
    .movie-frame {
        border: 2px solid #e5e7eb;
        transition: all 0.3s ease;
    }

    .movie-card img {
        transition: transform 0.3s ease;
    }

    .movie-card:hover img {
        transform: scale(1.05);
    }
</style>
